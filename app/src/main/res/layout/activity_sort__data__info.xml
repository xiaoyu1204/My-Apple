<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.sort.Sort_Data_InfoActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sort_data_info_tab"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/Jiured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.example.myhttp.utils.viewpager.CustomViewPager
        android:id="@+id/sort_data_info_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>